package com.beepeers.common.ro;

import javax.xml.bind.annotation.XmlRootElement;

@XmlRootElement
public class FriendshipRO {
	public enum SubscriptionStatusRO {
		UNDEFINED, YES, NO, MAYBE
	}

	// Used only for compatibility !!!
	@Deprecated
	private Boolean subscribed = false;

	private SubscriptionStatusRO subscriptionStatus = SubscriptionStatusRO.UNDEFINED;
	private Boolean notification = false;
	// Used for multiple subscriptions
	private Long profileId;
	
	// Used only for compatibility !!!
	@Deprecated
	public Boolean getSubscribed() {
		if (subscribed == null) {
			return false;
		}
		return subscribed;
	}

	// Used only for compatibility !!!
	@Deprecated
	public void setSubscribed(Boolean subscribed) {
		this.subscribed = subscribed;
	}

	public SubscriptionStatusRO getSubscriptionStatus() {
		return subscriptionStatus;
	}

	public void setSubscriptionStatus(SubscriptionStatusRO subscriptionStatus) {
		this.subscriptionStatus = subscriptionStatus;
		switch (subscriptionStatus) {
		case YES:
			this.subscribed = true;
			break;
		case NO:
			this.subscribed = false;
			break;
		default:
			this.subscribed = null;
			break;
		}
	}

	public Boolean getNotification() {
		return notification;
	}

	public void setNotification(Boolean notification) {
		this.notification = notification;
	}

	public Long getProfileId() {
		return profileId;
	}

	public void setProfileId(Long profileId) {
		this.profileId = profileId;
	}

}
